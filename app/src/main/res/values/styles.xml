<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PrefrenceTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColorSecondary">@color/dimGray</item>
    </style>

    <style name="listViewHeaderItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/lvHeadingTextSize</item>
        <item name="android:paddingLeft">@dimen/lvHeadingPaddingLeft</item>
    </style>

    <style name="listViewItem">
        <item name="android:layout_height">@dimen/lvItemHeight</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="listViewSubItem">
        <item name="android:layout_height">@dimen/lvSubItemHeight</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="listViewPrimaryDetail">
        <item name="android:paddingTop">@dimen/lvPrimaryPaddingTop</item>
        <item name="android:paddingBottom">@dimen/lvPrimaryPaddingBottom</item>
        <item name="android:paddingLeft">@dimen/lvPrimaryPaddingLeft</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/lvPrimaryTextSize</item>
    </style>

    <style name="listViewSecondaryDetail">
        <item name="android:paddingTop">@dimen/lvSecondaryPaddingTop</item>
        <item name="android:paddingBottom">@dimen/lvSecondaryPaddingBottom</item>
        <item name="android:paddingLeft">@dimen/lvSecondaryPaddingLeft</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/lvSecondaryTextSize</item>
    </style>

    <style name="listViewVerticalDivider">
        <item name="android:layout_marginTop">@dimen/lvDividerMargin</item>
        <item name="android:layout_marginBottom">@dimen/lvDividerMargin</item>
        <item name="android:layout_width">@dimen/lvDividerWidth</item>
        <item name="android:background">@color/lvDividerColor</item>
    </style>

    <style name="listViewSectionDividerVerticalDivider">
        <item name="android:layout_width">@dimen/lvDividerWidth</item>
        <item name="android:background">@color/goblinGreen</item>
        <item name="android:layout_marginTop">@dimen/lvSectionDividerMargin</item>
        <item name="android:layout_marginBottom">@dimen/lvSectionDividerMargin</item>
    </style>

    <style name="listViewItemButtonStyle">
        <item name="android:layout_width">@dimen/lvItemWidth</item>
        <item name="android:layout_height">@dimen/lvItemHeight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="listViewHeaderItemButtonStyle">
        <item name="android:layout_width">@dimen/lvItemHeight</item>
        <item name="android:layout_height">@dimen/lvItemHeight</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="MyTextViewStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="btnStyleBlackpearl" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/black_perl</item>
    </style>

    <style name="listView">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/lvPrimaryPaddingLeft</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/lvTextSize</item>
    </style>

    <style name="TabFragmentMargin">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="featureTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/featureTitleHeight</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/lvTitleTextSize</item>
        <item name="android:maxLines">@integer/num1</item>
    </style>

    <style name="featureTitleImageStyle">
        <item name="android:layout_width">@dimen/featureTitleImageHeight</item>
        <item name="android:layout_height">@dimen/featureTitleImageHeight</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="lvFeatureAboutStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="dashboardTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/lvTitleTextSize</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="dividerMedium">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="dialogImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="dialogTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FullscreenTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MyDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/dialog_rounded</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="DisclaimerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/dialog_rounded</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/ub</item>
        <item name="colorSwitchThumbNormal">#FF0000</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#FF0000</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

</resources>