<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="5dip" />
      <gradient
        android:angle="270"
        android:centerColor="#302311"
        android:centerY="0.5"
        android:endColor="#452a28"
        android:startColor="#242625" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="5dip" />
          <gradient
            android:angle="0"
            android:endColor="#3b80b4"
            android:startColor="#4290ca" />
      </shape>
    </clip>
  </item>
</layer-list>