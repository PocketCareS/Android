<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/feature_btnotify_choosebt_title"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        style="@style/dialogTextStyle"
        android:gravity="center_vertical"
         />
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/radiooptionHeight"
	    android:paddingRight="5dp"
    	android:paddingLeft="5dp"
	    android:weightSum="1"
	    android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/feature_btnotify_col1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:textStyle="bold|italic"
	        android:textColor="@color/skyblue"
	        android:gravity="center_vertical"
	        style="@style/dialogTextStyle"
	        android:maxLines="1"
	        android:layout_weight="0.6" />
	    
	    <TextView
	        android:id="@+id/feature_btnotify_col2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:textStyle="bold|italic"
	        android:textColor="@color/skyblue"
	        android:gravity="center_vertical"
	        style="@style/dialogTextStyle"
	        android:maxLines="1"
	        android:layout_weight="0.4"
	        />
	</LinearLayout>
	
    <ListView
        android:id="@+id/feature_btnotify_btlist"
        android:layout_width="match_parent"
        android:paddingRight="5dp"
    	android:paddingLeft="5dp"
    	android:paddingBottom="5dp"
        android:layout_height="165dp"
        />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#6D7B8D" />
    
    <TextView
        android:id="@+id/feature_btnotify_interval_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dialogTextStyle"
        android:gravity="center_vertical"
         />
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/seekbarheight"
		android:layout_marginBottom="5dp"
	    android:orientation="horizontal"
	    android:weightSum="1" >
	
	    <TextView
	        android:id="@+id/feature_btnotify_interval_value"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10sp"
	        android:gravity="center"
	        style="@style/dialogTextStyle"
	        android:textStyle="bold"
	        android:textColor="@color/skyblue"
	        android:layout_height="match_parent"
	        android:layout_weight="0.2" />
	    
	    <SeekBar 
	        android:id="@+id/feature_btnotify_interval_seekbar"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginRight="10sp"
	        android:layout_weight="0.8"
	        android:minHeight="@dimen/seekbarheight"
    		android:maxHeight="@dimen/seekbarheight"
	        />
	            
	</LinearLayout>

</LinearLayout>
