<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Switch
            android:id="@+id/devModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dev mode: "
            android:textOff="Off"
            android:textOn="On" />

        <Switch
            android:id="@+id/toastLogSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show logs: " />

        <Switch
            android:id="@+id/calibrationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Calibration: " />

        <LinearLayout
            android:id="@+id/calibrationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/calibrationDefaultX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/calibrationDefaultY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnServerDataUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server data upload" />


        <TextView
            android:id="@+id/txtViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>