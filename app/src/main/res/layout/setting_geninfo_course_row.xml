<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seekbarheight"
    android:weightSum="1"
    android:orientation="horizontal" >
	
    <TextView
        android:id="@+id/setting_geninfo_course_weekday"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_height="match_parent"
        android:layout_weight="0.4" />
    
    <TextView
        android:id="@+id/setting_geninfo_course_value"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />
    
    <SeekBar 
        android:id="@+id/setting_geninfo_course_seekbar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:minHeight="@dimen/seekbarheight"
    	android:maxHeight="@dimen/seekbarheight"
        />
	            
</LinearLayout>